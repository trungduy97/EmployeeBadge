<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg12"
    tools:context=".ui.activity.CropCardActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="600dp"
        android:layout_height="113dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        app:srcCompat="@drawable/logotext2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:background="@drawable/backgroundimage"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageView3" >

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="220dp"
            android:background="@drawable/custome_background"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            >

            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/imgAvata"
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:background="@drawable/border_image"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="4dp"
            android:maxLines="1"
            android:text="TRUONG THI THANH DOANH"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />
        <TextView
            android:id="@+id/txtPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#91d7e9"
            android:text="SE I"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#91d7e9"
            android:text="123456"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:background="#ffffff"
        app:srcCompat="@drawable/link" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"/>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <Button
            android:id="@+id/btnTake"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/custome_background_button"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:text="CROP IMAGE" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>