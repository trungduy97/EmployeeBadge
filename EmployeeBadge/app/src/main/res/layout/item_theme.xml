<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:background="@drawable/backgroung_item_theme"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/rlItem"
    >

    <ImageView
        android:id="@+id/imgTheme"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtNameTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0741EE"
        android:layout_toEndOf="@+id/imgTheme"
        />
    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_edit"
        android:background="@color/imgly_transparent_color"
        android:scaleType="fitXY"
        android:layout_toEndOf="@+id/imgTheme"
        android:layout_below="@+id/txtNameTheme"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        />

    <ImageButton
        android:id="@+id/btnRemove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_delete"
        android:background="@color/imgly_transparent_color"
        android:scaleType="fitXY"
        android:layout_toEndOf="@+id/btnEdit"
        android:layout_below="@+id/txtNameTheme"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>